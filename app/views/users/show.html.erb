<h1><%= @user.site_name %> キャンペーン管理</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>お客様</th>
    <th>E-mail</th>
    <th>契約日時</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.created_at %></td>
        <td><%= link_to 'Send', '#', class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', '#', class: "btn btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>